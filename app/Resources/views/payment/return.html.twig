{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        {% if status == "success" %}
        <h1>Le paiment s'est déroulé correctement !</h1>
        {% endif %}

        {% if status == "denied" %}
        <h1>Votre paiement à été refusé</h1>
        {% endif %}

        {% if status == "canceled" %}
        <h1>Vous n'êtes pas allé au bout du processus de paiement</h1>
        {% endif %}
    </div>
</div>
{% endblock %}
